{
  "name": "serverless-graphql-apollo",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint app-backend/*.js app-client/src/**/*.js",
    "prettier": "prettier --write \"{app-backend,app-client/src}/**/*.{js,css,json}\"",
    "prettier-check": "prettier --list-different \"{app-backend,app-client/src}/**/*.{js,css,json}\"",
    "test": "yarn run lint && yarn run prettier-check",
    "install-dependencies": "yarn install && cd app-backend && yarn install && cd ../app-client && yarn install"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4"
  }
}
